{
  "info": {
    "name": "Backend Basic 2 API Collection",
    "description": "API collection for LunchRoundController, MenuOptionController, and AuthController",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"testuser\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"your_refresh_token_here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Lunch Rounds",
      "item": [
        {
          "name": "Create Lunch Round",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2025-09-20\",\n  \"status\": \"PLANNING\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/lunch-rounds",
              "host": ["{{baseUrl}}"],
              "path": ["lunch-rounds"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Lunch Rounds",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/lunch-rounds",
              "host": ["{{baseUrl}}"],
              "path": ["lunch-rounds"]
            }
          },
          "response": []
        },
        {
          "name": "Get Lunch Round by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/lunch-rounds/1",
              "host": ["{{baseUrl}}"],
              "path": ["lunch-rounds", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Update Lunch Round",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2025-09-21\",\n  \"status\": \"CONFIRMED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/lunch-rounds/1",
              "host": ["{{baseUrl}}"],
              "path": ["lunch-rounds", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Update Lunch Round Status",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/lunch-rounds/1/status?status=CONFIRMED",
              "host": ["{{baseUrl}}"],
              "path": ["lunch-rounds", "1", "status"],
              "query": [
                {
                  "key": "status",
                  "value": "CONFIRMED"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Lunch Round",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/lunch-rounds/1",
              "host": ["{{baseUrl}}"],
              "path": ["lunch-rounds", "1"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Menu Options",
      "item": [
        {
          "name": "Add Menu Option to Round",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"menu\": \"치킨도시락\",\n  \"type\": \"MAIN\",\n  \"price\": 8000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/menu-options/1",
              "host": ["{{baseUrl}}"],
              "path": ["menu-options", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Menu Options",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/menu-options",
              "host": ["{{baseUrl}}"],
              "path": ["menu-options"]
            }
          },
          "response": []
        },
        {
          "name": "Get Menu Options by Round ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/menu-options/1",
              "host": ["{{baseUrl}}"],
              "path": ["menu-options", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Get Menu Option by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/menu-options/option/1",
              "host": ["{{baseUrl}}"],
              "path": ["menu-options", "option", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Update Menu Option",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"menu\": \"비빔밥\",\n  \"type\": \"MAIN\",\n  \"price\": 7000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/menu-options/1",
              "host": ["{{baseUrl}}"],
              "path": ["menu-options", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Menu Option (Admin Only)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/menu-options/1",
              "host": ["{{baseUrl}}"],
              "path": ["menu-options", "1"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}